@model SistemaSoporte.ViewModels.PerfilViewModel
@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary border-0 py-3">
                    <h3 class="h5 mb-0 text-white">
                        <i class="bi bi-person-circle me-2"></i>Mi Perfil
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Columna de información del usuario -->
                        <div class="col-md-8">
                            <div class="mb-4">
                                <h5 class="text-dark">Información Personal</h5>
                                <hr class="my-3">

                                <div class="row">
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label text-muted small">Nombre Completo</label>
                                        <p class="text-dark fw-semibold">@Model.NombreCompleto</p>
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label text-muted small">Correo Electrónico</label>
                                        <p class="text-dark fw-semibold">@Model.Email</p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label text-muted small">Departamento</label>
                                        <p class="text-dark fw-semibold">@Model.Departamento</p>
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label text-muted small">Tipo de Usuario</label>
                                        <p class="text-dark fw-semibold">
                                            @if (Model.TipoUsuario == "Admin")
                                            {
                                                <span class="badge bg-danger">@Model.TipoUsuario</span>
                                            }
                                            else if (Model.TipoUsuario == "Tecnico")
                                            {
                                                <span class="badge bg-warning text-dark">@Model.TipoUsuario</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary">@Model.TipoUsuario</span>
                                            }
                                        </p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label text-muted small">Teléfono</label>
                                        <p class="text-dark fw-semibold">@(string.IsNullOrEmpty(Model.Telefono) ? "No especificado" : Model.Telefono)</p>
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="form-label text-muted small">Fecha de Registro</label>
                                        <p class="text-dark fw-semibold">@Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
                                    </div>
                                </div>

                                @if (Model.Especialidad != null)
                                {
                                    <div class="row">
                                        <div class="col-12 mb-3">
                                            <label class="form-label text-muted small">Especialidad</label>
                                            <p class="text-dark fw-semibold">@Model.Especialidad</p>
                                        </div>
                                    </div>
                                }

                                <div class="row">
                                    <div class="col-12 mb-3">
                                        <label class="form-label text-muted small">Roles</label>
                                        <p class="text-dark fw-semibold">
                                            @foreach (var rol in Model.Roles)
                                            {
                                                <span class="badge bg-info me-1">@rol</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Columna de foto de perfil -->
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="mb-4">
                                    <h5 class="text-dark">Foto de Perfil</h5>
                                    <hr class="my-3">

                                    <div class="position-relative d-inline-block">
                                        @if (!string.IsNullOrEmpty(Model.FotoPerfil))
                                        {
                                            <img id="fotoPerfil" src="@Model.FotoPerfil?v=@DateTime.Now.Ticks"
                                                 class="rounded-circle shadow"
                                                 alt="Foto de perfil"
                                                 style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #dee2e6;">
                                        }
                                        else
                                        {
                                            <div id="fotoPerfil" class="rounded-circle bg-secondary d-flex align-items-center justify-content-center shadow"
                                                 style="width: 150px; height: 150px; border: 3px solid #dee2e6;">
                                                <i class="bi bi-person-fill text-white" style="font-size: 3rem;"></i>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <!-- Formulario para cambiar foto -->
                                <div class="mt-3">
                                    <form id="formCambiarFoto" asp-controller="Perfil" asp-action="CambiarFoto"
                                          method="post" enctype="multipart/form-data">
                                        @Html.AntiForgeryToken()

                                        <div class="mb-3">
                                            <input type="file" id="fotoArchivo" name="FotoArchivo"
                                                   accept=".jpg,.jpeg,.png,.gif"
                                                   class="form-control form-control-sm"
                                                   style="display: none;">

                                            <button type="button" id="btnSeleccionarFoto"
                                                    class="btn btn-outline-primary btn-sm w-100 mb-2">
                                                <i class="bi bi-camera me-1"></i>Cambiar Foto
                                            </button>

                                            @if (!string.IsNullOrEmpty(Model.FotoPerfil))
                                            {
                                                <form id="formEliminarFoto" asp-controller="Perfil" asp-action="EliminarFoto" method="post" class="d-inline w-100">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-danger btn-sm w-100"
                                                            onclick="return confirm('¿Está seguro de que desea eliminar su foto de perfil?')">
                                                        <i class="bi bi-trash me-1"></i>Eliminar Foto
                                                    </button>
                                                </form>
                                            }
                                        </div>

                                        <div id="previewContainer" class="mb-3" style="display: none;">
                                            <div class="mb-2">
                                                <img id="previewImage" class="rounded shadow"
                                                     style="max-width: 100%; max-height: 150px; display: none;">
                                            </div>
                                            <div class="d-flex justify-content-center gap-2">
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="bi bi-check-lg me-1"></i>Guardar
                                                </button>
                                                <button type="button" id="btnCancelar" class="btn btn-secondary btn-sm">
                                                    <i class="bi bi-x-lg me-1"></i>Cancelar
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer border-0 py-3 bg-light">
                    <div class="text-center">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Para actualizar tu información de contacto, contacta al administrador del sistema.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Manejar la selección de archivo
            $('#btnSeleccionarFoto').click(function() {
                $('#fotoArchivo').click();
            });

            // Mostrar preview de la imagen seleccionada
            $('#fotoArchivo').change(function() {
                var file = this.files[0];
                if (file) {
                    var reader = new FileReader();

                    reader.onload = function(e) {
                        $('#previewImage').attr('src', e.target.result).show();
                        $('#previewContainer').show();
                        $('#btnSeleccionarFoto').parent().hide();
                    }

                    reader.readAsDataURL(file);
                }
            });

            // Cancelar la selección
            $('#btnCancelar').click(function() {
                $('#fotoArchivo').val('');
                $('#previewImage').hide();
                $('#previewContainer').hide();
                $('#btnSeleccionarFoto').parent().show();
            });

            // Validar formulario antes de enviar
            $('#formCambiarFoto').submit(function(e) {
                var fileInput = $('#fotoArchivo')[0];
                if (!fileInput.files || fileInput.files.length === 0) {
                    e.preventDefault();
                    alert('Debe seleccionar una imagen');
                    return false;
                }

                var file = fileInput.files[0];
                var allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                var maxSize = 5 * 1024 * 1024; // 5MB

                if (!allowedTypes.includes(file.type)) {
                    e.preventDefault();
                    alert('Solo se permiten archivos JPG, JPEG, PNG y GIF');
                    return false;
                }

                if (file.size > maxSize) {
                    e.preventDefault();
                    alert('La imagen no puede ser mayor a 5MB');
                    return false;
                }

                // Mostrar loading
                $(this).find('button[type="submit"]').prop('disabled', true)
                    .html('<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>Guardando...');
            });

            // Forzar recarga de imagen para evitar cache
            function refreshProfileImage() {
                var img = document.getElementById('fotoPerfil');
                if (img && img.src) {
                    img.src = img.src.split('?')[0] + '?v=' + new Date().getTime();
                }
            }

            // Ejecutar después de cargar la página
            setTimeout(refreshProfileImage, 100);
        });
    </script>

    <style>
        .card {
            border: none;
            border-radius: 10px;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .btn {
            border-radius: 6px;
        }

        .form-control {
            border-radius: 6px;
        }
    </style>
}