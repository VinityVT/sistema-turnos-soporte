Set-Content -Path "appsettings.Production.json" -Value @'
{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=SIGESTEC;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "ApiSettings": {
    "BaseUrl": "https://sigestec-api.onrender.com"
  },
  "Jwt": {
    "CookieName": "AuthToken",
    "ExpireMinutes": 720
  },
  "UploadSettings": {
    "MaxFileSize": 5242880,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".gif" ],
    "AllowedMimeTypes": [ "image/jpeg", "image/jpg", "image/png", "image/gif" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
'@